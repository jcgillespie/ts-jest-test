{
    "globals": {
      "__TS_CONFIG__": "config/tsconfig.json"
    },
    "transform": {
        ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.spec)\\.js$",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.spec.ts",
        "!src/**/*.d.ts"
    ],
    "rootDir": "../"
}